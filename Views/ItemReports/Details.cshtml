@model CampusLostAndFound.Models.ItemReport
@using CampusLostAndFound.Models

@{
    ViewData["Title"] = "Item Details";
}

<h1>Item Details</h1>

<div class="card">
    <div class="card-body">

        <div class="row">
            <div class="col-md-4">
                @if (Model.PhotoPath != null)
                {
                    <img src="@Model.PhotoPath" class="img-fluid rounded border" />
                }
                else
                {
                    <div class="alert alert-info">No photo available</div>
                }
            </div>

            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9">@Model.Type</dd>

                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Model.Category?.Name</dd>

                    <dt class="col-sm-3">Location</dt>
                    <dd class="col-sm-9">@Model.Location?.Name</dd>

                    <dt class="col-sm-3">Date Reported</dt>
                    <dd class="col-sm-9">@Model.DateReported</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.Status</dd>

                    <dt class="col-sm-3">Contact Name</dt>
                    <dd class="col-sm-9">@Model.ContactName</dd>

                    <dt class="col-sm-3">Contact Email</dt>
                    <dd class="col-sm-9">@Model.ContactEmail</dd>
                </dl>
            </div>
        </div>

    </div>
</div>

<br />

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>

    @* Claim gomb csak akkor, ha NINCS végleg claimelve *@
    @if (Model.Status != ItemStatus.Claimed)
    {
        <a class="btn btn-success ms-2"
           asp-controller="Claims"
           asp-action="Create"
           asp-route-itemReportId="@Model.Id">
            Claim this item
        </a>
    }
</div>
