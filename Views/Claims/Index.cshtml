@model IEnumerable<CampusLostAndFound.Models.Claim>
@using CampusLostAndFound.Models

@{
    ViewData["Title"] = "Claims";
}

<h1>Claims</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Item</th>
            <th>Claimer Name</th>
            <th>Claimer Email</th>
            <th>Message</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                <strong>@item.ItemReport?.Title</strong><br />
                <small>(@item.ItemReport?.Type)</small>
            </td>

            <td>@item.ClaimerName</td>
            <td>@item.ClaimerEmail</td>
            <td>@item.Message</td>
            <td>@item.Status</td>
            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>

            <td>
                @if (item.Status == ClaimStatus.New)
                {
                    <a class="btn btn-success btn-sm"
                       asp-action="Approve" asp-route-id="@item.Id">Approve</a>

                    <a class="btn btn-danger btn-sm ms-1"
                       asp-action="Reject" asp-route-id="@item.Id">Reject</a>
                }
                else
                {
                    <span class="badge bg-secondary">@item.Status</span>
                }
            </td>
        </tr>
}
    </tbody>
</table>
