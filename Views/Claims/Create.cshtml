@model CampusLostAndFound.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
}

<h1>Submit a Claim</h1>

<form asp-action="Create">
    <input type="hidden" asp-for="ItemReportId" />

    <div class="form-group">
        <label>Your Name</label>
        <input asp-for="ClaimerName" class="form-control" />
        <span asp-validation-for="ClaimerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Your Email</label>
        <input asp-for="ClaimerEmail" class="form-control" />
        <span asp-validation-for="ClaimerEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Message</label>
        <textarea asp-for="Message" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Claim</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
